# 메일 전송여부 수정
SQL:UpdateMailReconf
	UPDATE
		MAIL_RECONF
	SET
		MAIL_RECONF_SEND = 1,
		MAIL_RECONF_SEND_DATE = TO_CHAR(CURRENT, '%Y-%m-%d %H:%M')
	WHERE
		USERS_IDX = ?
		AND
		MAIL_RECONF_MESSAGE_ID = ?
		AND
		MAIL_RECONF_TO like ?
