##############################################################################
# MailAddressRecognize MySQL SQL
#
# - 수정후에는 서버를 다시 시작해야 합니다.
# - 개발자외에는 수정을 금합니다.
# - 날짜: 선언 DATETIME, 비교 ?
# - 변수: 문자 VARCHAR, 숫자 INT
##############################################################################

# 테이블 생성
SQL:CreateTable
	CREATE TABLE
		MAIL_ADDRESS_RECOGNIZE (
			PRIMARY KEY (MAIL_ADDRESS),
			MAIL_ADDRESS VARCHAR(200) NOT NULL,
			CHECK_TIME DATETIME NOT NULL,
			STATE CHAR(1) DEFAULT 'U'
		)

# 테이블 존재 여부 검사
SQL:IsExistsTable
	SHOW TABLES LIKE 'MAIL_ADDRESS_RECOGNIZE'

# 메일 주소가 존재하지 않고 점검 주기가 지난 메일 주소만 삭제한다.
SQL:DeleteMailAddressRecognizeWhereCheckTimeAndState
	DELETE FROM
		MAIL_ADDRESS_RECOGNIZE
	WHERE
		CHECK_TIME < ?
	AND
		STATE = ?

# 메일 주소 확인 데이터를 추가한다.
SQL:InsertMailAddressRecognize
	INSERT INTO
		SENDER_MAIL_ADDRESS_RECOGNIZE (
			MAIL_ADDRESS,
			CHECK_TIME,
			STATE
		) VALUES (
			?, ?, ?
		) 

# 메일 주소 확인 데이터를 가져온다.
SQL:SelectMailAddressRecognize
	SELECT
		MAIL_ADDRESS,
		CHECK_TIME,
		STATE
	FROM
		MAIL_ADDRESS_RECOGNIZE
	WHERE
		MAIL_ADDRESS = ?

# 메일 주소 확인 데이터를 가져온다.
SQL:SelectMailAddressRecognizeWhereState
	SELECT
		MAIL_ADDRESS,
		CHECK_TIME,
		STATE
	FROM
		MAIL_ADDRESS_RECOGNIZE
	WHERE
		STATE = ?

# 메일 주소 확인 데이터를 수정한다.
SQL:UpdateMailAddressRecognize
	UPDATE
		MAIL_ADDRESS_RECOGNIZE
	SET
		CHECK_TIME = ?,
		STATE = ?
	WHERE
		MAIL_ADDRESS = ? 

# 점검 시간이 오래되고 상태가 일치하는 메일 주소 확인 데이터를 수정한다.
SQL:UpdateMailAddressRecognizeWhereCheckTimeAndState
	UPDATE
		MAIL_ADDRESS_RECOGNIZE
	SET
		CHECK_TIME = ?,
		STATE = ?
	WHERE
		STATE = ?
	AND
		MAIL_ADDRESS = ? 


# 메일 주소 확인 데이터를 삭제한다.
SQL:DeleteMailAddressRecognize
	DELETE FROM
		MAIL_ADDRESS_RECOGNIZE
	WHERE
		MAIL_ADDRESS = ?